<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/master_list_rl1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/masterpage_item_hight"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/photo_wrapper"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/master_item_iv_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/masterpage_item_info_hight"
            android:layout_alignParentBottom="true"
            android:alpha="0.7" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.6"
                android:background="#000000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/master_item_projrctname"
                    style="@style/masterpage_item_projectname_text_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/masterpage_item_info_projectname_hight"
                    android:layout_above="@+id/master_list_ll1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:text="项目名称" />

                <RelativeLayout
                    android:id="@+id/master_list_ll1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/masterpage_item_info_progressbar_hight"
                    android:layout_above="@+id/master_list_rl2" >

                    <ProgressBar
                        android:id="@+id/master_item_pbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:layout_marginRight="12dip"
                        android:progress="67" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/master_list_rl2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/masterpage_item_info_status_words_hight"
                    android:layout_above="@+id/master_list_rl3" >

                    <TextView
                        android:id="@+id/master_item_tv_reachnum"
                        style="@style/masterpage_item_projectstatus_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="91%达到" />

                    <TextView
                        android:id="@+id/master_item_tv_supportnum"
                        style="@style/masterpage_item_projectstatus_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="8,426已获支持" />

                    <TextView
                        android:id="@+id/master_item_tv_remaintime"
                        style="@style/masterpage_item_projectstatus_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="16天剩余" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/master_list_rl3"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/masterpage_item_info_pic_hight"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/master_item_tv_attentionnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="30"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/master_item_iv_attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/icon_care" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/master_item_tv_discussnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="15"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/master_item_iv_discuss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/icon_review" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/master_item_tv_sharenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="675"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/master_item_iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_share" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>