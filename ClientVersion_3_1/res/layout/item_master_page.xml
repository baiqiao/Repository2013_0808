<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/master_list_rl1"
	    android:layout_width="fill_parent"
	    android:layout_height="230dp"
	    android:layout_marginTop="3dp"
	    android:layout_marginLeft="3dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="5dp"
	    android:background="@drawable/photo_wrapper"
	    android:orientation="horizontal">
	    
        <ImageView
            android:id="@+id/master_item_iv_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />
	
	    <LinearLayout
	        android:id="@+id/master_list_ll1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_above="@+id/master_list_rl2"
	        android:gravity="center"
	        android:background="@color/white"
	        android:alpha="0.68"
	        android:orientation="vertical" >
	
	        <ProgressBar
	            android:id="@+id/master_item_pbar"
	            style="?android:attr/progressBarStyleHorizontal"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="12dip"
	        	android:layout_marginLeft="12dip"
	            android:progress="67" />
	       
	    </LinearLayout>
	    
	    
	    <RelativeLayout 
	        android:id="@+id/master_list_rl2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/master_list_rl3"
	        android:background="@color/white"
	        android:alpha="0.65">
	        
	        <TextView
	            android:id="@+id/master_item_tv_reachnum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textSize="15sp"
	            android:layout_marginLeft="20dp"
	            android:textColor="@color/black"
	            android:text="91%达到" />
	        
	        
	        <TextView
	            android:id="@+id/master_item_tv_supportnum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:text="8,426已获支持" />
	        
	        <TextView
	            android:id="@+id/master_item_tv_remaintime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:textSize="15sp"
	            android:layout_marginRight="20dp"
	            android:textColor="@color/black"
	            android:text="16天剩余" />
	        
	    </RelativeLayout>
	    
	
	    <RelativeLayout
	        android:id="@+id/master_list_rl3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:orientation="horizontal"
	        android:background="@color/white"
	        android:alpha="0.65"
	        android:paddingBottom="8dp" >
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="20dp"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <TextView
		            android:id="@+id/master_item_tv_attentionnum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="8dp"
		            android:textColor="@color/white"
		            android:text="30" />
		
		        <ImageView
		            android:id="@+id/master_item_iv_attention"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="15dp"
		            android:src="@drawable/icon_care" />
		            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	           <TextView
		            android:id="@+id/master_item_tv_discussnum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="8dp"
		            android:textColor="@color/white"
		            android:text="15" />
		
		        <ImageView
		            android:id="@+id/master_item_iv_discuss"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="15dp"
		            android:src="@drawable/icon_review" />
		        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	          	<TextView
		            android:id="@+id/master_item_tv_sharenum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="8dp"
		            android:text="675"
		            android:textColor="@color/white" />
		        
		        <ImageView
		            android:id="@+id/master_item_iv_share"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/icon_share" />
		            
	        </LinearLayout>
	
	        
	
	        
	
	        
	
	        
	
	    </RelativeLayout>
	
	</RelativeLayout>
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        
    </LinearLayout>
    
</LinearLayout>



