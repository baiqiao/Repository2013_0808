<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/discuss_item_hhorizontal_margin"
        android:layout_marginRight="@dimen/discuss_item_hhorizontal_margin"
        android:layout_marginTop="@dimen/item_vertical_margin"
        android:background="@drawable/perm_comment_button" >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/discuss_item_hhorizontal_margin"
                android:layout_marginRight="@dimen/discuss_item_hhorizontal_margin" >

                <TextView
                    android:id="@+id/discuss_pro_tv_user_name"
                    style="@style/discuss_uesrname_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/discuss_item_vertical_margin"
                    android:text="嘻嘻哈哈" />

                <TextView
                    android:id="@+id/discuss_pro_tv_type"
                    style="@style/discuss_discusstype_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/discuss_pro_tv_user_name"
                    android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                    android:layout_toRightOf="@+id/discuss_pro_tv_user_name"
                    android:text="评论你的项目" />

                <TextView
                    android:id="@+id/discuss_pro_tv_discusstext"
                    style="@style/discuss_text_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discuss_pro_tv_user_name"
                    android:layout_marginTop="@dimen/discuss_item_vertical_margin"
                    android:text="什么什么说点什么，完全扯淡。怎么能是这样的。" />

                <TextView
                    android:id="@+id/discuss_tv_discuss_time"
                    style="@style/discuss_time_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discuss_pro_tv_discusstext"
                    android:layout_marginTop="@dimen/discuss_item_vertical_margin"
                    android:text="12月16日  14: 21" />

                <TextView
                    android:id="@+id/discuss_tv_delete"
                    style="@style/discuss_del_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/discuss_tv_discuss_time"
                    android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                    android:layout_toRightOf="@+id/discuss_tv_discuss_time"
                    android:text="删除" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="@dimen/discuss_item_vertical_margin"
            android:background="@drawable/comment_bubble" >

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/discuss_item_vertical_margin"
                android:layout_marginLeft="@dimen/discuss_item_hhorizontal_margin"
                android:layout_marginRight="@dimen/discuss_item_hhorizontal_margin"
                android:layout_marginTop="@dimen/discuss_item_vertical_margin" >

                <ImageView
                    android:id="@+id/discuss_pro_iv_projectpic"
                    android:layout_width="@dimen/discuss_item_pic_h"
                    android:layout_height="@dimen/discuss_item_pic_v"
                    android:background="@drawable/masterlist_item_bg" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/discuss_item_hhorizontal_margin"
                    android:layout_toRightOf="@+id/discuss_pro_iv_projectpic" >

                    <TextView
                        android:id="@+id/discuss_pro_tv_projectname"
                        style="@style/discuss_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="项目名称" />

                    <TextView
                        android:id="@+id/discuss_pro_tv1"
                        style="@style/discuss_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/discuss_pro_tv_projectname"
                        android:layout_below="@+id/discuss_pro_tv_projectname"
                        android:text="已获" />

                    <TextView
                        android:id="@+id/discuss_pro_tv_getsupportnum"
                        style="@style/discuss_num_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/discuss_pro_tv1"
                        android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                        android:layout_toRightOf="@+id/discuss_pro_tv1"
                        android:text="26" />

                    <TextView
                        style="@style/discuss_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/discuss_pro_tv_getsupportnum"
                        android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                        android:layout_toRightOf="@+id/discuss_pro_tv_getsupportnum"
                        android:text="人支持" />

                    <TextView
                        android:id="@+id/discuss_pro_tv2"
                        style="@style/discuss_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/discuss_pro_tv_projectname"
                        android:layout_below="@+id/discuss_pro_tv1"
                        android:text="已筹" />

                    <TextView
                        android:id="@+id/discuss_pro_tv_getmoneynum"
                        style="@style/discuss_num_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/discuss_pro_tv2"
                        android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                        android:layout_toRightOf="@+id/discuss_pro_tv2"
                        android:text="8426.00" />

                    <TextView
                        style="@style/discuss_text_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/discuss_pro_tv2"
                        android:layout_marginLeft="@dimen/discuss_item_hhorizontal_padding"
                        android:layout_toRightOf="@+id/discuss_pro_tv_getmoneynum"
                        android:text="元" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_below="@+id/rl3" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>