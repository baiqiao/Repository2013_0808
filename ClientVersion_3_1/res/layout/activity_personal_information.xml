<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_bg_unselect"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <ImageButton
            android:id="@+id/perinfo_ibtn_topbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="#00000000"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/perinfo_tv_topbar_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="个人信息"
            android:textColor="@color/red"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/perinfo_ll_gotosetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_setting_bg2_normal"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/perinfo_iv_headgraph"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/prosonal_setting_headgraph" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/perinfo_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="小刺猬"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/perinfo_iv_competence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/personal_setting_logo" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="#ffffff"
                android:clickable="true" >

                <TextView
                    android:id="@+id/perinfo_tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="简介: 小随便写点什么吧"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/perinfo_tv_introduce"
                    android:src="@drawable/personal_setting_gotonext" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/perinfo_rl_promote"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/perinfo_tv_promote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="2" />

            <TextView
                android:id="@+id/perinfo_tv_promote2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_promote"
                android:layout_centerHorizontal="true"
                android:text="发起" />

            <LinearLayout
                android:id="@+id/perinfo_ll_promote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_promote2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/between_item_line2"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/perinfo_rl_support"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/perinfo_tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="2" />

            <TextView
                android:id="@+id/perinfo_tv_support2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_support"
                android:layout_centerHorizontal="true"
                android:text="支持" />

            <LinearLayout
                android:id="@+id/perinfo_ll_support"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_support2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/between_item_line2"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/perinfo_rl_attention"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/perinfo_tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="8" />

            <TextView
                android:id="@+id/perinfo_tv_attention2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_attention"
                android:layout_centerHorizontal="true"
                android:text="关注" />

            <LinearLayout
                android:id="@+id/perinfo_ll_attention"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_attention2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/between_item_line2"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/perinfo_rl_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/perinfo_tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="16" />

            <TextView
                android:id="@+id/perinfo_tv_share2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_share"
                android:layout_centerHorizontal="true"
                android:text="分享" />

            <LinearLayout
                android:id="@+id/perinfo_ll_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perinfo_tv_share2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/between_item_line2"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
    <ListView 
        android:id="@+id/perinfo_lv"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"></ListView>

</LinearLayout>