<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/left_bg_unselect"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@drawable/personal_setting_bg" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:background="@drawable/personal_setting_bg" >
            </LinearLayout>

            <ImageView
                android:id="@+id/item_allcomm_headgraph"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_allcomm_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textColor="#1E90FF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_allcomm_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="comment"
                    android:textColor="@color/color_qianhui"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_allcomm_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:textColor="@color/color_qianhui"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_allcomm_delete"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:text="删除"
                        android:textColor="#1E90FF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:background="@drawable/personal_setting_bg" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>